# MongoDB Atlas Connection
MONGODB_URI=your_mongodb_atlas_connection_string

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
# Service Role Key (for admin operations - keep secret!)
# Find it in: Supabase Dashboard > Settings > API > Service Role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3000
NODE_ENV=development
# Allowed CORS origins (comma-separated list)
# Production: https://yourdomain.com,https://www.yourdomain.com
# Development: http://localhost:3000,http://127.0.0.1:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# MongoDB Connection Pool Configuration
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# Rate Limiting Configuration
RATE_LIMIT_PUBLIC=100
RATE_LIMIT_ADMIN=50
RATE_LIMIT_AUTH=5
RATE_LIMIT_DONATION=10

# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=yourgmail@gmail.com
SMTP_PASS=your_16_char_app_password
SMTP_SECURE=true

# Where to receive messages
CONTACT_TO_EMAIL=yourgmail@gmail.com

# From header (use the same Gmail to avoid rejection)
CONTACT_FROM_EMAIL=yourgmail@gmail.com

# Flutterwave Payment Gateway
# Get these from your Flutterwave dashboard: https://dashboard.flutterwave.com
FLW_PUBLIC_KEY=FLWPUBK_TEST-REPLACE_ME
FLW_SECRET_KEY=FLWSECK_TEST-REPLACE_ME
# Currency code (e.g., NGN, USD, GHS, KES, ZAR) - default is NGN
FLW_CURRENCY=NGN
# Optional: Secret hash for webhook verification (recommended for production)
# Generate this in your Flutterwave dashboard under Settings > Webhooks
FLW_SECRET_HASH=your_webhook_secret_hash

# Flutterwave Webhook URL (set this in your Flutterwave dashboard)
# Production: https://yourdomain.com/api/donations/webhook
# Development: Use ngrok or similar to expose localhost
# Example: https://abc123.ngrok.io/api/donations/webhook

