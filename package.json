{
  "name": "hcm-church-website",
  "version": "1.0.0",
  "description": "Heavenly Concordance Ministry International Church Website",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build-css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/styles.css",
    "build-css:watch": "npx tailwindcss -i ./public/css/input.css -o ./public/css/styles.css --watch",
    "build": "npm run build-css",
    "serve": "npx http-server public -p 3000 -o"
  },
  "keywords": [
    "church",
    "website",
    "ministry"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "flutterwave-node-v3": "^1.3.0",
    "helmet": "^8.1.0",
    "jsdom": "^25.0.1",
    "mongodb": "^6.20.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16"
  }
}
